<%= image_tag("legit_hub_top_left.png", id: "top_left_image") %>
<%= link_to "Dashboard", dashboard_path, id: "dashboard_link", class: "btn" %>
<div class="container-fluid center-align">
  <h3 id="pull_requests_header" style="opacity:0;">Pull Requests</h3>
  <h3 id="pull_requests_repository" style="opacity:0;">Repository: <%= @repository_name %></h3>
  <h3 id="pull_requests_owner" style="opacity:0;">Owner: <%= @repository_owner %></h3>
  <% if @presenter.pull_requests(@repository_owner, @repository_name).empty? %>
    <h3 id="pull_requests_repository_empty" style="opacity:0;">No Pull Requests For This Repository</h3>
  <% else %>
    <ul class="collection" id="pull_requests_list" style="opacity:0;">
      <%= render partial: "pull_requests_item", collection: (@presenter.pull_requests(@repository_owner, @repository_name)), as: :pull_request %>
  <% end %>
  </ul>
</div>
<%= image_tag("legit_hub_bottom_right.png", id: "bottom_right_image") %>
